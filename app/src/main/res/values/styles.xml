<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Numbers">
        <item name="android:background">@color/colorGrisAzul</item>
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:layout_width">@dimen/button_size</item>
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="Operators">
        <item name="android:background">@color/colorGrisAzul</item>
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:layout_width">@dimen/button_size</item>
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="Memory">
        <item name="android:background">@color/colorGrisAzulClaro</item>
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:layout_width">@dimen/button_size</item>
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="Specials">
        <item name="android:background">@color/colorRojo</item>
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:layout_width">@dimen/button_size</item>
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="ShortDisplay">
        <item name="android:background">@color/colorRojo</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">4</item>
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:textSize">@dimen/short_display_text_size</item>
        <item name="android:gravity">center|right</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
